<h1 align="center"><%= @tape.name %></h1>

<% flash.each do |type,message| %>
<%= message %>
<% end %>

<div align="center">
  <%= @tape.home.name %></br>
  <%= link_to "Edit Tape Info", edit_tape_path(@tape), class:"btn btn-sm btn-danger" %>
</div>

<table align="center">
 <% @qr.modules.each_index do |x| -%>
   <tr>
   <% @qr.modules.each_index do |y| -%>
    <% if @qr.dark?(x,y) -%>
    <td class="black"/>
    <% else -%>
    <td class="white"/>
    <% end -%>
   <% end -%>
   </tr>
 <% end -%>
</table>

<style type="text/css">
 table {
  border-width: 0;
  border-style: none;
  border-color: #0000ff;
  border-collapse: collapse;
 }
 td {
   border-width: 0;
   border-style: none;
   border-color: #0000ff;
   border-collapse: collapse;
   padding: 0;
   margin: 0;
   width: 10px;
   height: 10px;
 }
 td.black { background-color: #000; }
 td.white { background-color: #fff; }
</style>